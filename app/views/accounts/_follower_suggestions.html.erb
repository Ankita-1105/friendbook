<% @follower_suggestions.each do |account| %>
	<div class="recommended-follower">
		<div class="row">
			<div class="col-md-2">
				<%= link_to profile_picture(account, 50, 50), profile_path(account.username) %>
			</div>

			<div class="col-md-10">
				<%= link_to account.username, profile_path(account.username),:class => "text-dar" %><br>
				<p class="text-muted"><%= account.created_at > 2.days.ago ? "New to Friendbook" : "followed by x user" %></p>
				<%= form_tag follow_account_path, method: :post %>
					<%= hidden_field_tag :follow_id, account.id %>
					<%= submit_tag "Add Friend", :class => "btn btn-info btn-sm" %>
			</div>
		</div>
		<br>
	</div>
<% end %>


<% post.comments.each do |comment| %>
	<div class="comments">
		<%= link_to profile_picture(comment.account ,25 ,25), profile_path(comment.account.username)  %>
		<strong><%= link_to comment.account.username, profile_path(comment.account.username) , class: "text-dark" %></strong>
		<%= comment.comment %>
		<p class=""text-muted><%= time_ago_in_words comment.created_at %> ago</p>
	</div>

<% end %>